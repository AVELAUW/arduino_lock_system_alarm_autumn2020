//Code to test a water level sensor 

// Sensor pins
#define sensorPower ? // put the pin number plugged in for the VCC
#define sensorPin ? // put the pin number plugged in for the Signal output

// Variable that will hold water level value
int val = ?;  //put an ideal starting value for the water level

void setup() {
	// Set D7 as an OUTPUT
	pinMode(sensorPower, ?); //put "OUTPUT"
	
	// Set to LOW so no power flows through the sensor
	digitalWrite(sensorPower, LOW);
	
	Serial.begin(?); //the baud rate we are testing with (it was mentioned in the slides)
}

void loop() {
	//get the reading from the function below and print it
	int level = readSensor();
	
	Serial.print(?); // write "Water level: "
	Serial.println(level);
	
	delay(?); // 1 second but in milliseconds
}

//This is a function used to get the reading
int readSensor() {
	digitalWrite(sensorPower, HIGH);	// Turn the sensor ON
	delay(10);							// wait 10 milliseconds
	val = analogRead(sensorPin);		// Read the analog value form sensor
	digitalWrite(sensorPower, LOW);		// Turn the sensor OFF
	return val;							// send current reading
}
